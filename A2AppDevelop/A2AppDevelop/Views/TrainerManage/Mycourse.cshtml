
@{
    ViewBag.Title = "View";
}

<h2>View</h2>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Topic
        </th>
        <th>
            Categories
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @foreach (var topic in item.Topic)
                {
                    <b>@topic.TopicName ,</b>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseCategory.CategoryName)
            </td>

        </tr>
    }

</table>
